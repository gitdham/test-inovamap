<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Map Point</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/openlayers/openlayers.github.io@master/en/v6.4.3/css/ol.css"
    type="text/css">
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">
  <style>
    .map {
      height: 350px;
      width: 100%;
    }

    th,
    td {
      font-size: .8rem;
    }

    .action-button {
      text-align: center
    }

    .action-button button {
      width: 20px;
      height: 10px;
    }
  </style>
</head>

<body>
  <div class="container pt-3">
    <button class="btn-add-point button is-success has-text-weight-semibold">Add Point</button>
    <!-- Maps -->
    <div class="section p-0 mt-5">
      <div class="box p-0">
        <article class="media">
          <div class="media-content">
            <div id="map" class="map">
              <div id="popup"></div>
            </div>
          </div>
        </article>
      </div>
    </div>
    <!-- Data Point -->
    <div class="section p-0 mt-5">
      <table id="data-table" class="hover row-border">
        <thead>
          <tr>
            <th>Label</th>
            <th>Kota/Kab</th>
            <th>Provinsi</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Aksi</th>
          </tr>
        </thead>
      </table>
    </div>
  </div>

  <!-- Add point modal -->
  <div class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
      <header class="modal-card-head">
        <p class="modal-card-title">Add Point</p>
        <button class="delete close-modal" aria-label="close"></button>
      </header>
      <section class="modal-card-body">
        <form class="add-point" id="input-form" name="input-form">
          <div class="field">
            <label class="label">Label</label>
            <div class="control">
              <input class="input is-small" type="text" name="label" id="label" placeholder="e.g Point x">
            </div>
          </div>

          <div class="field">
            <label class="label">Kota/Kabupaten</label>
            <div class="control">
              <input class="input is-small" type="text" name="kota_kab" id="kota_kab" placeholder="e.g Kota Bandung">
            </div>
          </div>

          <div class="field">
            <label class="label">Provinsi</label>
            <div class="control">
              <input class="input is-small" type="text" name="provinsi" id="provinsi" placeholder="e.g Jawa Barat">
            </div>
          </div>

          <div class="field">
            <label class="label">Latitude</label>
            <div class="control">
              <input class="input is-small" type="text" name="latitude" id="latitude">
            </div>
          </div>

          <div class="field">
            <label class="label">Longitude</label>
            <div class="control">
              <input class="input is-small" type="text" name="longitude" id="longitude">
            </div>
          </div>
        </form>
      </section>
      <footer class="modal-card-foot">
        <button class="button is-success btn-submit">Submit</button>
        <button class="button close-modal">Cancel</button>
      </footer>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
  <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.jsdelivr.net/gh/openlayers/openlayers.github.io@master/en/v6.4.3/build/ol.js"></script>
  <script src="../script.js"></script>
</body>

</html>
